@using Microsoft.AspNetCore.Identity
@using ASPShop.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Выйти</button>
            <div class="cart">
                <p class="circle"> <a href="/cart/index"> <img src="~/img/cartIcon.png" alt="Корзина"> </a> </p>
            </div>

        </form>
        
}
else
{
    <div class="container-reg">
        <a  id="register" asp-area="Identity" asp-page="/Account/Register">Зарегестрироваться</a>
        <a  id="login" asp-area="Identity" asp-page="/Account/Login">Войти</a>
        <p class="message">Зарегестрируйтесь или войдите для появления корзины!</p>
    </div>
}
